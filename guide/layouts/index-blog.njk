<head>
<meta charset="utf-8" />
{#} Use the .htaccess and remove these lines to avoid edge case issues. More info: h5bp.com/i/378 #}
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>

{% import "ak_core_macros.njk" as ak_core with context %}
{% import "ak_base_macros.njk" as ak_base with context %}

<title>{{ title }}</title>
{{ ak_base.headerMeta() }}
{{ ak_core.XMLSitemap("/sitemap.xml") }}
{# {{ ak_core.googleSiteVerification("We are good") }} #}
{{ ak_base.linkRelTags() }}
{{ ak_base.canonicalURL() }}

{{ ak_core.stylesheets() }}
{{ ak_core.headerJavaScript() }}


</head>
<body>

{% include "site-navbar.html" %}

<div class="container-fluid" role="main">
<div class="row">
{% include "header.html" %}
<!-- partial file-name="header.html"></partial -->
</div>

<div class="row">
  {# include our document's content #}
  <article class="col-md-9">

    <div class="article-heading">
        <h1 class="article-title" align="center">{{ title }}</title>
    </div>

    <div class="article-body">
      <breadcrumb-trail/>
      {% if teaser %}<p><strong>{{ teaser }}</strong></p> {% endif %}
      {{ content }}
      <blog-news-river 
                doc-root-path="{{ document.path }}"
                maxentries="60"></blog-news-river>

    </div>
  </article>
  <section id="right" class="col-md-3">
  </section>
</div>

<footer class="row" style="text-align: center; height: 100px;">
<div class="col-sm-12">
{% include "footer.html" %}
<!-- partial file-name="footer.html"></partial></div -->
</footer>
</div>
</div>

{# JavaScript at the bottom for fast page loading #}
{{ ak_core.footerJavaScript() }}
</body>
</html>
